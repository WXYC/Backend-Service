{
  "display": "Node LTS",

  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2022"],
    "module": "es2022",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src", "drizzle"],
  "exclude": ["node_modules", "drizzle/migrations"]
}
