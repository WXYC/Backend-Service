{
  "testEnvironment": "node",
  "testMatch": ["**/apps/backend/tests/specs/?(*.)+(spec).js"],
  "setupFilesAfterEnv": ["./apps/backend/tests/test.setup.js"],
  "reporters": [
    "default",
    [
      "jest-html-reporters",
      {
        "publicPath": "./apps/backend/tests/report",
        "filename": "report.html",
        "pageTitle": "SuperTest and Jest API Test Report",
        "overwrite": true,
        "expand": true
      }
    ]
  ]
}
