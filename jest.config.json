{
  "testEnvironment": "node",
  "testMatch": ["**/tests/integration/?(*.)+(spec).js"],
  "globalSetup": "./tests/setup/globalSetup.js",
  "setupFilesAfterEnv": ["./tests/setup/integration.setup.js"],
  "reporters": [
    "default",
    [
      "jest-html-reporters",
      {
        "publicPath": "./tests/report",
        "filename": "report.html",
        "pageTitle": "SuperTest and Jest API Test Report",
        "overwrite": true,
        "expand": true
      }
    ]
  ],
  "maxWorkers": "50%",
  "testTimeout": 30000,
  "bail": 1,
  "forceExit": true,
  "verbose": true
}
