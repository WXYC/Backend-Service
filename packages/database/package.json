{
  "name": "@wxyc/database",
  "version": "1.0.0",
  "description": "WXYC Shared Database Client and Schema",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf ./dist/*",
    "drizzle:generate": "drizzle-kit generate --config drizzle.config.ts",
    "drizzle:migrate": "drizzle-kit migrate --config drizzle.config.ts",
    "drizzle:drop": "drizzle-kit drop --out ./migrations"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.3",
    "postgres": "^3.4.4"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.4",
    "tsup": "^8.4.0",
    "typescript": "^5.6.2"
  }
}
