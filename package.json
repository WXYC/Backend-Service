{
  "name": "wxyc-monorepo",
  "version": "1.0.0",
  "description": "WXYC Backend Services Monorepo",
  "private": true,
  "main": "./dist/app.js",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "node dist/app.js",
    "build": "npm run build:packages && npm run build:backend && npm run copy-dist",
    "build:packages": "npm run build --workspace=packages/database --workspace=packages/shared --workspace=packages/auth-middleware",
    "build:backend": "npm run build --workspace=apps/backend",
    "copy-dist": "node scripts/copy-dist.cjs",
    "dev": "npm run dev:backend",
    "dev:backend": "cd apps/backend && npm run dev",
    "clean": "rm -rf ./dist && npm run clean --workspaces",
    "test": "npm run test --workspaces",
    "db:start": "docker compose -f dev_env/docker-compose.yml --env-file .env --profile dev up -d && sleep 2 && bash dev_env/db_setup.sh",
    "db:stop": "docker compose -f dev_env/docker-compose.yml --env-file .env --profile dev down db -v --remove-orphans",
    "ci:env": "docker compose -f dev_env/docker-compose.yml --env-file .env --profile ci up --build -d && sleep 2 && USE_CI=true bash dev_env/db_setup.sh",
    "ci:test": "npm run build && PORT=${CI_PORT:-8081} npm start & sleep 3 && npm run test --workspace=apps/backend",
    "ci:clean": "pkill -f 'node dist/app.js' || true && docker compose -f dev_env/docker-compose.yml --env-file .env --profile ci down -v",
    "ci:testmock": "npm run ci:env && npm run ci:test && npm run ci:clean",
    "drizzle:generate": "cd packages/database && drizzle-kit generate --config drizzle.config.ts",
    "drizzle:migrate": "cd packages/database && drizzle-kit migrate --config drizzle.config.ts",
    "drizzle:drop": "cd packages/database && drizzle-kit drop --out ./migrations"
  },
  "author": "AyBruno",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/express-serve-static-core": "^5.0.7",
    "@types/node": "^24.1.0",
    "@types/pg": "^8.11.10",
    "@types/ssh2": "^1.15.5",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.31.5",
    "jest": "^30.0.5",
    "jest-html-reporters": "^3.1.7",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "tsup": "^8.4.0",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "async-mutex": "^0.5.0",
    "aws-jwt-verify": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.3",
    "express": "^5.1.0",
    "node-fetch": "^3.3.2",
    "node-ssh": "^13.2.1",
    "postgres": "^3.4.4",
    "posthog-node": "^5.8.6",
    "ssh2": "^1.17.0",
    "swagger-ui-express": "^5.0.1",
    "yaml": "^2.7.1"
  }
}
