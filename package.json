{
  "name": "@wxyc/backend-services",
  "version": "1.0.0",
  "description": "All necessary app services for the WXYC flowsheet backend",
  "scripts": {
    "start": "npm start --workspace=apps/$TARGET",
    "build": "npm run build --workspaces",
    "dev": "dotenvx run -f .env -- concurrently \"npm:dev:backend\" \"npm:dev:auth\"",
    "dev:backend": "npm run dev --workspace=@wxyc/backend",
    "dev:auth": "npm run dev --workspace=@wxyc/auth-service",
    "clean": "rm -rf ./dist/*",
    "test": "dotenvx run -f .env -- jest",
    "db:start": "docker compose -f dev_env/docker-compose.yml --env-file .env --profile dev up -d; docker attach wxyc-db-init",
    "db:stop": "docker compose -f dev_env/docker-compose.yml --env-file .env --profile dev down db -v --remove-orphans",
    "ci:build": "npm run docker:build --workspace=@wxyc/backend",
    "ci:env": "npm run ci:build && docker compose -f dev_env/docker-compose.yml --env-file .env --profile ci up -d && docker attach wxyc-ci-db-init",
    "ci:test": "PORT=${CI_PORT:-8081} npm run test;",
    "ci:clean": "docker compose -f dev_env/docker-compose.yml --env-file .env --profile ci down -v",
    "ci:testmock": "npm run ci:env && npm run ci:test && npm run ci:clean",
    "drizzle:generate": "dotenvx run -f .env -- drizzle-kit generate --config 'drizzle.config.ts'",
    "drizzle:migrate": "dotenvx run -f .env -- drizzle-kit migrate --config 'drizzle.config.ts'",
    "drizzle:drop": "dotenvx run -f .env -- drizzle-kit drop --out ./src/db/migrations"
  },
  "author": "AyBruno",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "shared/*"
  ],
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.51.0",
    "@types/node": "^24.1.0",
    "@types/pg": "^8.11.10",
    "@types/ssh2": "^1.15.5",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "^0.44.7",
    "jest": "^30.0.5",
    "jest-html-reporters": "^3.1.7",
    "nodemon": "^3.1.7",
    "postgres": "^3.4.7",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "tsup": "^8.4.0",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "jose": "^6.1.2"
  }
}
