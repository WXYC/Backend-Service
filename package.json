{
  "name": "wxyc-monorepo",
  "version": "1.0.0",
  "description": "WXYC Backend Services Monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:auth\" \"npm run dev:backend\"",
    "dev:auth": "cd apps/auth && npm run dev",
    "dev:backend": "cd apps/backend && npm run dev",
    "build": "npm run build --workspaces",
    "build:auth": "cd apps/auth && npm run build",
    "build:backend": "cd apps/backend && npm run build",
    "start:auth": "cd apps/auth && npm start",
    "start:backend": "cd apps/backend && npm start",
    "clean": "npm run clean --workspaces",
    "test": "npm run test --workspaces",
    "db:start": "docker compose -f dev_env/docker-compose.yml --env-file .env --profile dev up -d && sleep 2 && bash dev_env/db_setup.sh",
    "db:stop": "docker compose -f dev_env/docker-compose.yml --env-file .env --profile dev down --volumes --remove-orphans",
    "db:clean": "docker compose -f dev_env/docker-compose.yml --env-file .env --profile dev down --volumes --remove-orphans && docker system prune -f",
    "ci:env": "docker compose -f dev_env/docker-compose.yml --env-file .env --profile ci up --build -d && sleep 2 && USE_CI=true bash dev_env/db_setup.sh",
    "ci:test": "PORT=${CI_PORT:-8081} npm run test;",
    "ci:clean": "docker compose -f dev_env/docker-compose.yml --env-file .env --profile ci down --volumes --remove-orphans",
    "ci:testmock": "npm run ci:env && npm run ci:test && npm run ci:clean",
    "drizzle:generate": "cd packages/database && drizzle-kit generate --config drizzle.config.ts",
    "drizzle:migrate": "cd packages/database && drizzle-kit migrate --config drizzle.config.ts",
    "drizzle:drop": "cd packages/database && drizzle-kit drop --out ./migrations",
    "docker:build": "docker-compose -f infrastructure/docker-compose.yml build",
    "docker:up": "docker-compose -f infrastructure/docker-compose.yml up"
  },
  "author": "AyBruno",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/express-serve-static-core": "^5.0.7",
    "@types/node": "^24.1.0",
    "@types/pg": "^8.11.10",
    "@types/ssh2": "^1.15.5",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.31.5",
    "jest": "^30.0.5",
    "jest-html-reporters": "^3.1.7",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "tsup": "^8.4.0",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "async-mutex": "^0.5.0",
    "better-auth": "^1.3.23",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.3",
    "express": "^5.1.0",
    "hono": "^4.9.9",
    "node-fetch": "^3.3.2",
    "node-ssh": "^13.2.1",
    "postgres": "^3.4.4",
    "posthog-node": "^5.8.6",
    "ssh2": "^1.17.0",
    "swagger-ui-express": "^5.0.1",
    "yaml": "^2.7.1"
  }
}
